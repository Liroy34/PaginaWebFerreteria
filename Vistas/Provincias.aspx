            </ul>
        </div>

            <div>
                <div>
                    <div class="row">
                        <asp:Label ID="lblProductos" runat="server" Font-Bold="True" Font-Size="XX-Large" Font-Underline="True" Text="Provincias"></asp:Label>
                    </div>
                    <br />

                    <asp:GridView ID="grdProvincias" class="table table-striped table-hover" runat="server" AutoGenerateColumns="False" AutoGenerateDeleteButton="True" AutoGenerateEditButton="True" OnRowDeleting="grdProvincia_RowDeleting" OnRowCancelingEdit="grdProvincias_RowCancelingEdit" OnRowEditing="grdProvincias_RowEditing" OnRowUpdating="grdProvincias_RowUpdating" AllowPaging="True" OnPageIndexChanging="grdProvincias_PageIndexChanging" PageSize="5">
                        <Columns>
                            <asp:TemplateField HeaderText="IdProvincia">
                                <ItemTemplate>
                                    <asp:Label ID="lbl_it_IdProvincia" runat="server" Text='<%# Bind("Id_Provincia_Pr") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Provincia">
                                <EditItemTemplate>
                                    <asp:TextBox ID="txt_ed_Provincia" runat="server" Text='<%# Bind("Descripcion_Provincia_Pr") %>' Height="20px"></asp:TextBox>
                                </EditItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="lblProvincia" runat="server" Text='<%# Bind("Descripcion_Provincia_Pr") %>'></asp:Label>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:TemplateField HeaderText="Estado">
                                <EditItemTemplate>
                                    <asp:CheckBox ID="chb_Eit_Estado" runat="server" Checked='<%# Bind("Estado_Provincia_Pr") %>' />
                                </EditItemTemplate>
                                <ItemTemplate>
                                    <asp:Label ID="lbl_It_Estado" runat="server" Text='<%# Bind("Estado_Provincia_Pr") %>'></asp:Label>
