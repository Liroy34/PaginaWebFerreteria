                    <asp:Label ID="lblMensaje" runat="server"></asp:Label>
                    <br />
                    <span class="auto-style2"><strong>Agregar Provincia<br />
                    </strong>
                        <br />
                        Provincia </span>
                    <div class="col-3">
                    <asp:TextBox ID="txtProvincia" class="form-control form-control-sm" runat="server" OnTextChanged="txtProvincia_TextChanged" MaxLength="20"></asp:TextBox>
                    </div>
                    <br />
                    <asp:Button ID="btnAgregar" class="btn btn-primary" runat="server" OnClick="btnAgregar_Click" Text="Agregar" />
